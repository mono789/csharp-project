@model List<PruebaTecnica2.Models.Comment>

<div class="container">
    <h2 class="mt-4">Comentarios del Post</h2>

    <!-- Mostrar los comentarios -->
    @if (Model != null && Model.Any())
    {
        <h4>Comentarios:</h4>
        <ul class="list-group">
            @foreach (var comment in Model)
            {
                <li class="list-group-item">
                    <strong>@comment.name</strong> (<em>@comment.email</em>)
                    <p>@comment.body</p>
                </li>
            }
        </ul>
    }
    else
    {
        <div class="alert alert-info mt-4">No hay comentarios para este post.</div>
    }

    <!-- Enlace para agregar un comentario al post -->
    <a href="@Url.Action("AddComment", "Comments", new { postId = @ViewData["postId"] })" class="btn btn-success mt-4">Agregar Comentario</a>

</div>
